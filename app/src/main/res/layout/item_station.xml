<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="140dp"
    android:orientation="horizontal"
    android:background="@drawable/menu_item_background"
    android:layout_marginEnd="8dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageViewStation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_marginEnd="8dp" /> <!-- Shape drawable uygulanıyor -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayoutStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp">

            <!-- Yıldızlar ile point gösterimi -->
            <ImageView
                android:id="@+id/imageViewStar1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/star_24px" />

            <ImageView
                android:id="@+id/imageViewStar2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/star_24px" />

            <ImageView
                android:id="@+id/imageViewStar3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/star_24px" />

            <ImageView
                android:id="@+id/imageViewStar4"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/star_24px" />

            <ImageView
                android:id="@+id/imageViewStar5"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/star_24px" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewStationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Station Name"
            android:textColor="@android:color/black"
            android:fontFamily="@font/lato"
            android:textStyle="bold"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/lyAppointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/calendar_month_24px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/lato"
                android:text="@string/make_an_appointment"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyFavorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/favoriteIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/favorite_24px" />

            <TextView
                android:id="@+id/favoriteText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/add_favorites"
                android:fontFamily="@font/lato"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
